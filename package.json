    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "eslint": "^9.9.1",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "helmet": "^6.0.1",
    "http-status-codes": "^2.2.0",
    "ioredis": "^5.4.2",
    "joi": "^17.13.3",
