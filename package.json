    "ts-node-dev": "^2.0.0",
    "tsc-watch": "^6.0.0",
    "typeorm": "0.3.11",
    "typescript": "^4.9.5",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.16",
